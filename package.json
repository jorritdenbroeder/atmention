	"license": "ISC",
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"build": "run-s build:*",
		"test": "run-s test:*",
		"coveralls": "cat packages/atmention-core/coverage/lcov.info | coveralls",
		"build:core": "lerna run build --scope atmention-core --stream",
		"build:angular": "ng build atmention-angular --prod",
		"build:angular-demo": "ng build atmention-angular-demo --prod",
		"build:angularjs": "lerna run build --scope atmention-angularjs --stream",
		"build:angularjs-demo": "lerna run build --scope atmention-angularjs-demo --stream",
		"test:core": "lerna run test --scope atmention-core --stream",
		"test:angular": "ng test atmention-angular --codeCoverage=true --watch=false",
		"test:angular-demo": "ng test atmention-angular-demo --codeCoverage=true --watch=false",
		"start:angular-demo": "ng serve atmention-angular-demo",
		"start:angularjs-demo": "lerna run start --scope atmention-angularjs-demo --stream"
	},
